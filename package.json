{
  "name": "digital-library-api",
  "version": "3.0.0",
  "description": "API de sistema de biblioteca digital para gerenciamento de membros, catálogo de livros e empréstimos. Desenvolvida para fins educacionais e testes automatizados.",
  "main": "app.js",
  "scripts": {
    "test": "mocha 'test/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-rest-external": "mocha 'test/rest/external/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-rest-controller": "mocha 'test/rest/controller/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-graphql-external": "mocha 'test/graphql/external/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-graphql-controller": "mocha 'test/graphql/controller/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "start-rest": "node server.js",
    "start-graphql": "node graphql/server.js",
    "start": "node server.js & node graphql/server.js",
    "k6:performance": "k6 run test/k6/script-performance.js",
    "k6:performance:summary": "K6_WEB_DASHBOARD=true K6_WEB_DASHBOARD_PERIOD=1s K6_WEB_DASHBOARD_EXPORT=./mochawesome-report/k6-html-report.html k6 run test/k6/script-performance.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "express": "^4.17.1",
    "graphql": "^16.11.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "chai-exclude": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.5",
    "mochawesome": "^7.1.3",
    "sinon": "^21.0.0",
    "supertest": "^7.2.2",
    "wait-on": "^9.0.1"
  }
}
